# Пример файла конфигурации
# Скопируйте в .env и заполните реальными значениями

# PostgreSQL
POSTGRES_PASSWORD=your_secure_password_here

# Backend
SECRET_KEY=your_secret_key_min_32_chars_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ЮKassa (опционально)
YUKASSA_SHOP_ID=
YUKASSA_SECRET_KEY=

# Yandex Cloud (для CI/CD)
YC_REGISTRY_ID=your_registry_id
YC_SA_JSON_CREDENTIALS=path_to_service_account_key.json
YC_K8S_CLUSTER_ID=your_cluster_id

# Domain
DOMAIN=yourdomain.com
API_URL=https://yourdomain.com/api

